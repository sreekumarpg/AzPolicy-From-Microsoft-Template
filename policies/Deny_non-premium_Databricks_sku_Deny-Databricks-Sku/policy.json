{
 "properties": {
  "displayName": "Deny non-premium Databricks sku",
  "policyType": "Custom",
  "mode": "Indexed",
  "description": "Enforces the use of Premium Databricks workspaces to make sure appropriate security features are available including Databricks Access Controls, Credential Passthrough and SCIM provisioning for AAD.",
  "metadata": {
   "version": "1.0.0",
   "category": "Databricks",
   "createdBy": "f93359ba-28fa-492f-bc0b-7e299b24f126",
   "createdOn": "2022-04-10T14:38:49.5268567Z",
   "updatedBy": null,
   "updatedOn": null
  },
  "parameters": {
   "effect": {
    "type": "String",
    "metadata": {
     "displayName": "Effect",
     "description": "Enable or disable the execution of the policy"
    },
    "allowedValues": [
     "Audit",
     "Disabled",
     "Deny"
    ],
    "defaultValue": "Deny"
   }
  },
  "policyRule": {
   "if": {
    "allOf": [
     {
      "field": "type",
      "equals": "Microsoft.Databricks/workspaces"
     },
     {
      "field": "Microsoft.DataBricks/workspaces/sku.name",
      "notEquals": "premium"
     }
    ]
   },
   "then": {
    "effect": "[parameters('effect')]"
   }
  }
 },
 "id": "/providers/Microsoft.Management/managementGroups/ALZ/providers/Microsoft.Authorization/policyDefinitions/Deny-Databricks-Sku",
 "type": "Microsoft.Authorization/policyDefinitions",
 "name": "Deny-Databricks-Sku"
}